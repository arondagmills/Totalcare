doctype html
head
  title Login Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC' crossorigin='anonymous')
  link(rel='stylesheet' href='public/login.css')
main.login-container.center-block
  .panel-container
    section.panel(style='width: 100%;')
      header.panel-heading
        h2(style='color:#945009; font-size: x-large;')
          | TOTAL CARE EUROPE UNIPESSOAL LDA
          h2
            h3(style='padding: 10px; font-size: x-large;') User Login Panel
      .panel-body
        form
          div(style='font-size:14px; font-weight:bold;')
            span(style='color:#F00; padding-left: 0px;') Wrong credential Details or account deactivated!
            br
            br
          .form-group.text-left
            label(for='username') Userid/Username
            input#username.form-control(type='text' name='username' placeholder='Username/Userid' required='')
          .form-group.text-left
            label(for='password') Password
            input#password.form-control(type='password' name='password' placeholder='Password' required='')
          .form-group.text-center
            input(type='submit' value='Sign in')
          hr
          .register-now
            | Not registered?
            a(href='register.php')  Register now
